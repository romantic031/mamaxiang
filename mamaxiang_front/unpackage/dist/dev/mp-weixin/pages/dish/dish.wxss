page{
	height: 100%;
	background-color: #e8e8e8;
}
.home{
	height: 100%;
}
.top_view{
	margin: 8px 8px;
	display: flex;
	flex-wrap: wrap;
}
.left{
	margin-top: 100rpx;
	height: 100%;
	width: 160rpx;
	text-align: center;
	position: relative;
}
.left_view{
	width: 160rpx;
	height: 110rpx;
	line-height: 110rpx;
	font-size: 25rpx;
	border-radius: 10px;
}
.left_view::before{
	content: "";
	position: absolute;
	left: 40rpx;
	right: auto;
	top: auto;
	bottom: auto;
	width: 80rpx;
	height: 1px;
	background-color:#b4b4b4;
}
.left_view_active{
	background-color: #aa1024;
	color: #e8e8e8;
	border: none;
}
.right{
	height: 100%;
	width:570rpx;
	margin: 10rpx 10rpx;
	margin-top: 90rpx;
}
.right_view{
	position: relative;
	height: 300rpx;
	width: 570rpx;
	border-radius: 10px;
	background-color: #ffffff;
	margin-bottom: 60rpx;
}
.right_view image{	
	height: 300rpx;
	width: 285rpx;
}
.right_view_info{
	margin: 20rpx 10rpx;
	height: 260rpx;
	width: 265rpx;
	font-size: 25rpx;
	font-weight: 700;
	float: right;
	text-align: right;
}
.right_view_info_btnAdd{
	border-radius: 5px;
	height: 40rpx;
	width: 100rpx;
	line-height: 40rpx;
	background-color: #aa1024;
	color: #ffffff;
	position: absolute;
	top:260rpx;
	left: 470rpx;
	flex-direction: column;
}
.right_view_info_btn{
	border-radius: 5px;
	height: 45rpx;
	width: 140rpx;
	line-height: 45rpx;
	background-color: #aa1024;
	color: #ffffff;
	position: absolute;
	top:255rpx;
	left: 430rpx;
	font-size: 20rpx;
}
.anniu{
  display:flex;
  position:fixed; 
  width:95%;
  z-index:666;
  bottom:55rpx;
  left: 100rpx;
}
.btbdstk{
  border-radius:100px;
  width:80%;
