.cartTopView{
	display: flex;
	margin: 6px;
	padding: 10px;
}
.cartTopTitle{
	flex: 7;
	font-size: 35rpx;
	font-weight: 700;
	text-align: left;
}
.cartTopBtn{
	text-align: center;
	line-height: 30px;
	font-size: 20rpx;
	flex: 3;
	text-align: center;
	color: #b4b4b4;
	border: #ffffff 1rpx solid;
}
.cartContentItem{
	display: flex;
	margin-bottom: 15px;
	width: 93%;
	margin-left: auto;
	margin-right: auto;
}
.cartContentItem image{
	flex: 2;
	height: 80px;
	width: 80px;
}
.itemCenterView{
	flex-direction: column;
	flex: 6;
	display: flex;
}
.itemName{
	flex: 1;
	font-weight: 700;
	padding: 10px;
}
.itemPrice{
	flex: 1;
	color: #aa1024;
	font-weight: 700;
	padding: 10px;
}
.itemRightView{
	display: flex;
	flex: 2;
	justify-content: center;
	align-items:center;
}
.LeftSubtract{
	flex: 1;
	text-align: center;
	line-height: 25px;
	width: 25px;
	height: 25px;
	margin-right: 10px;
	border: #aa1024 1px solid;
	border-radius: 180px;
	background-color: #ffffff;
	padding: 0 5px 5px;
}
.rightAdd{
	flex: 1;
	text-align: center;
	line-height: 25px;
	width: 25px;
	height: 25px;
	font-size: 20px;
	margin-left: 10px;
	border: none;
	border-radius: 180px;
	background-color: #aa1024;
	color: #ffffff;
	padding: 0 5px 5px;
}
.cartBottomView{
	height: 90px;
	width: 100%;
}

