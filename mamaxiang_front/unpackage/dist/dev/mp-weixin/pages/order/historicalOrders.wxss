page{
	height: 100%;
	background-color: #e8e8e8;
}
.home{
	height: 100%;
	margin: 0;
	padding: 0;
	margin-left: auto; margin-right: auto;
}
.topTitle{
	margin-top: 10px;
	margin-left: 20px;
	width:100px;
	font-size: 45rpx;
	font-weight: 700;
	border-bottom: #aa1024 solid 4px;
}
.orderView{
	background-color: #f4f4f4;
	margin-top: 15px;
	margin-bottom: 15px;
	width: 650rpx;
	margin-left: auto;
	margin-right: auto;
	border-radius: 5px;
	box-shadow: darkgrey 2px 5px 5px;
	padding: 10px 15px;
}
.innerView{
	width: 100%;
	display: flex;
}
.innerViewTitle{
	font-size: 30rpx;
	font-weight: 600;
	flex: 5;
}
.innerViewStatus{
	flex:1;
	font-size: 25rpx;
	color: #9d9d9d;
}
.itemImg{
	height: 80px;
	width: 80px;
	border-radius: 5px;
}
.innerViewTime{
	font-size: 25rpx;
	color: #9d9d9d;
}
.orderItem{
	display: flex;
	align-items: center;
	margin-bottom: 10px;
}
.itemName{
	font-weight: 600;
	font-size: 30rpx;
	width: 105px;
	margin-left: 5px;
}
.itemSpace{
	width: 85rpx;
	height: 120px;
}
.itemuPrice{
	width: 100px;
	height: 120px;
	display: flex;
	flex-direction: column;
	justify-content:space-around;
	text-align: right;
}
.itemuPrice_top{
	font-weight: 600;
}
.itemuPrice_bottom{
	font-size: 25rpx;
}
.orderTotal{
	text-align: right;
}
.totalAmount{
	font-size: 35rpx;
	font-weight: 700;
	margin-right: 18px;
}

