page{
	height: 100%;
	background-color: #ffffff;
}
.home{
	height: 100%;
	margin: 0;
	padding: 0;
	margin-left: auto; margin-right: auto;
}
.top_stepsView{
	margin: 10px 0;
	width: 690rpx;
	height: 250rpx;
	margin-left: auto;
	margin-right: auto;
}
.top_title{
	margin-top: 15px;
	margin-bottom: 5px;
	width: 500rpx;
	height: 100rpx;
	margin-left: auto;
	margin-right: auto;
	font-size: 25rpx;
	color: #9d9d9d;
	background-color: #f4f4f4;
	text-align: center;
	line-height: 100rpx;
	border: #ffffff;
	border-radius: 50px;
}
.top_btnBox{
	width: 690rpx;
}
.btn{
	text-align: center;
	background-color: #aa1024;
	color: #ffffff;
	width: 170rpx;
	border-radius: 10px;
	margin-bottom: 15px;
	font-size: 25rpx;
	margin-left: auto;
	margin-right: auto;
}
.storeView{
	background-color: #eaeaea;
	width: 655rpx;
	height: 120rpx;
	text-align: left;
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 20px;
	margin-top: 35px;
	border-radius: 20px;
	padding: 15px;
}
.storeView_name{
	font-size: 35rpx;
	font-weight: 700;
	margin-bottom: 10px;
}
.storeView_detail{
	font-size: 25rpx;
}
.bottom_orderView{
	border-radius: 20px;
	background-color: #eaeaea;
	width: 690rpx;
	margin-left: auto;
	margin-right: auto;
	padding: 15px 5px;
}
.orderCode{
	font-size: 25rpx;
	color: #9d9d9d;
	width: 690rpx;
	margin-bottom: 15px;
}
.orderItem{
	display: flex;
	align-items: center;
	margin-bottom: 10px;
}
.itemName{
	font-weight: 600;
	font-size: 30rpx;
	width: 105px;
	margin-left: 5px;
}
.itemSpace{
	width: 85rpx;
	height: 120px;
}
.itemuPrice{
	width: 100px;
	height: 120px;
	display: flex;
	flex-direction: column;
	justify-content:space-around;
	text-align: right;
}
.itemuPrice_top{
	font-weight: 600;
}
.itemuPrice_bottom{
	font-size: 25rpx;
}
.itemImg{
	width: 100px;
	height: 100px;
	border-radius: 10px;
}
.orderTotal{
	margin-right: 20px;
	text-align: right;
}
.totalText{
	text-align: left;
	margin-left: 10px;
}
.totalText{
	font-size: 30rpx;
	font-weight: 550;
}
.detailNum{
	font-size: 25rpx;
}
.detailamount{
	font-size: 28rpx;
}
.amounttext{
	font-size: 35rpx;
	font-weight: 600;
}
.bottomBtn{
	margin:20px 0px;
	display: flex;
	margin-bottom: 20px;
}
.btn00{
	width: 140px;
	background-color: #aa1024;
	border-radius: 80px;
	color: #ffffff;
	font-size: 30rpx;
}

